<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="global_vm"
            type="com.mapd721.secretchat.ui.view_model.GlobalViewModel" />
        <variable
            name="vm"
            type="com.mapd721.secretchat.ui.view_model.ChatListViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ChatListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temperature"
                android:text="@{`Current temperature: ` + global_vm.temperature.toString()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/recycler_view_chat_list"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"/>

        </LinearLayout>

    </FrameLayout>
</layout>