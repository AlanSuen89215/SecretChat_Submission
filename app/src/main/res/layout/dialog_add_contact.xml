<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="vm"
            type="com.mapd721.secretchat.ui.view_model.AddContactDialogViewModel" />
    </data>
    
    <androidx.cardview.widget.CardView
       style="@style/dialog_cardView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

        <TextView
            android:text="@string/add_your_friends_now"
            style="@style/add_contact_title"
            />

            <com.google.android.material.textfield.TextInputLayout
               style="@style/add_contact_textField_layout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUserId"
                    style="@style/add_contact_textField_EditText"
                    android:hint="@string/userID"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_add"
            android:text="@string/add"
            style="@style/add_contact_button"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>