<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/receiver_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:background="@drawable/receiver_bubble">

            <TextView
                android:id="@+id/receiver_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_time"
                style="@style/message_time"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/receiver_image"
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:backgroundTint="@color/light_grey"
                android:background="@color/light_grey"
                android:visibility="gone"/>

            <VideoView
                android:id="@+id/receiver_video"
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/receiver_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiver_message"
                style="@style/message_text"
                android:layout_margin="8dp"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sender_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:background="@drawable/sender_bubble">

            <TextView
                android:id="@+id/sender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sender_message"
                style="@style/message_text"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/sender_image"
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:background="@color/light_blue"
                android:visibility="gone"/>

            <VideoView
                android:id="@+id/sender_video"
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/sender_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_time"
                style="@style/message_time"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>


    </RelativeLayout>
</layout>